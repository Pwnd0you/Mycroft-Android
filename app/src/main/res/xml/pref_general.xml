    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="@string/pref_default_display_ip"
        android:inputType="textCapWords"
        android:key="ip"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_default_ip" />

    <EditTextPreference
        android:capitalize="none"
        android:defaultValue="@string/pref_default_display_port"
        android:inputType="textCapWords"
        android:key="port"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_default_port" />

    <SwitchPreference
        android:key="appReaderSwitch"
        android:title="@string/pref_title_app_reader_switch"
        android:summary="@string/pref_summary_app_reader_switch"
        android:defaultValue="true"/>

    <SwitchPreference
        android:key="displayAppReaderSwitch"
        android:title="@string/pref_title_display_app_reader_switch"
        android:summary="@string/pref_summary_display_app_reader_switch"
        android:defaultValue="true"/>

    <!--&lt;!&ndash; NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. &ndash;&gt;
